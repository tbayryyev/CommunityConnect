

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form id="signup-form" action="/register" method="POST" class="p-3 border rounded">
                <h1 class="h3 mb-4 text-center">Sign Up</h1>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" class="form-control" name="usernameInput" placeholder="Enter username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="form-control" name="passwordInput" placeholder="Enter password" required>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
            </form>
        </div>
    </div>
</div>
 <p class="text-center mt-5">{{error}}</p>

