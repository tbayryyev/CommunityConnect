<div class="container">
    <div class="row justify-content-center ">
        <div class="col-md-8">
            <h2 class="text-center mt-5 mb-4">Post an Event</h2>
            <form action="/postEvent" method="post" class="p-4 border rounded shadow">
                <div class="form-group">
                    <label for="eventName">Event Name</label>
                    <input type="text" class="form-control" id="eventName" name="eventName" required aria-label="Event Name">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="4" required aria-label="Event Description"></textarea>
                </div>

                <div class="form-row">
                    <div class="col-md-6 form-group">
                        <label for="eventDate">Date</label>
                        <input type="date" class="form-control" id="eventDate" name="eventDate" required aria-label="Event Date">
                    </div>

                    <div class="col-md-6 form-group">
                        <label for="eventTime">Time</label>
                        <input type="time" class="form-control" id="eventTime" name="eventTime" required aria-label="Event Time">
                    </div>
                </div>

                <div class="form-group">
                    <label for="eventLocation">Location</label>
                    <input type="text" class="form-control" id="eventLocation" name="eventLocation" required aria-label="Event Location">
                </div>

                <div class="form-group">
                    <label for="eventCost">Cost</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" class="form-control" id="eventCost" name="eventCost" step="1" required aria-label="Event Cost">
                    </div>
                </div>

                <div class="form-group">
                    <label for="eventImage">Event Image (optional)</label>
                    <input type="file" class="form-control-file" id="eventImage" name="eventImage" accept="image/*" aria-label="Event Image">
                </div>

                <div class="form-group">
                    <label for="eventLink">Event Link (optional)</label>
                    <input type="url" class="form-control" id="eventLink" name="link" placeholder="https://example.com" aria-label="Event Link">
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Post</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <p class="text-center text-danger">{{ error }}</p>
        </div>
    </div>
</div>
